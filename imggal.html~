        <script>
            var c =0,pause=false;
            function count1()
            {
                if(c==0)
                {
                    $("#main_img").attr("src","./i1.jpeg");
                    c=1;
                }
                else if(c==1)
                {
                    $("#main_img").attr("src","./i2.jpeg");
                    c=2;                
                }
                else if(c==2)
                {
                    $("#main_img").attr("src","./i3.png");
                    c=3;
                }
                else if(c==3)
                {
                    $("#main_img").attr("src","./i4.jpeg");
                    c=0;                
                }            
            }
            function count2()
            {
                if(c==0)
                {
                    $("#main_img").attr("src","./i1.jpeg");
                    c=3;
                }
                else if(c==1)
                {
                    $("#main_img").attr("src","./i2.jpeg");
                    c=0;                
                }
                else if(c==2)
                {
                    $("#main_img").attr("src","./i3.png");
                    c=1;
                }
                else if(c==3)
                {
                    $("#main_img").attr("src","./i4.jpeg");
                    c=2;                
                }      
            }
            function showme(msg)
            {
                /*console.log(msg);
                if(msg=="i1")
                    $("#main_img").attr("src","./i1.jpeg");
                else if(msg=="i2")
                    $("#main_img").attr("src","./i2.jpeg");
                else if(msg=="i3")
                    $("#main_img").attr("src","./i3.png");
                else
                    $("#main_img").attr("src","./i4.jpeg");
                */
            $('img.top').click(function (){$('#main_img').attr('src',$(this).attr('src'));});
            }
            setInterval(function (){if(!pause) count2();},3000);
        </script>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <img class="top" onclick="pause=false;showme('i1')" src="./i1.jpeg" height=160px;/>
                </div>
                <div class="col-lg-3">
                    <img class="top" onclick="showme('i2')" src="./i2.jpeg" height=160px;/>
                </div>
                <div class="col-lg-3">
                    <img class="top" onclick="showme('i3')" src="./i3.png" height=160px;/>
                </div>
